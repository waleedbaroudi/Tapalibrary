<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TapaLibrary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_disabled</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/dark_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/tapa_regular</item>
    </style>

    <style name="RegularButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/bg_regular_button</item>
        <item name="android:background">@drawable/shape_curved_bg</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LightButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/bg_light_button_text</item>
        <item name="backgroundTint">@color/bg_light_button</item>
        <item name="android:background">@drawable/shape_curved_bg</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DarkTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/tapa_bold</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="LightTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/tapa_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>